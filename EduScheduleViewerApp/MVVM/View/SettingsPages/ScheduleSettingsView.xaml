<UserControl x:Class="EduScheduleViewerApp.MVVM.View.SettingsPages.ScheduleSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:EduScheduleViewerApp.MVVM.ViewModel.SettingsPagesViewModel"
             xmlns:local="clr-namespace:EduScheduleViewerApp.MVVM.View.SettingsPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:ScheduleSettingsViewModel/>
    </UserControl.DataContext>
    
    <StackPanel>
        <TabControl Style="{StaticResource ScheduleSettingsTabControl}">
            <TabItem Header="Розклад 1">
                <TextBlock Text="text 1"/>
            </TabItem>
            <TabItem Header="Розклад 2">
                <TextBlock Text="text 2"/>
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>
